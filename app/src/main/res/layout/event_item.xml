<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageViewFieldsBusinesses"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/round_corners"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/test_image" />

    <View
        android:id="@+id/semiTransparentBar"
        android:layout_width="360dp"
        android:layout_height="120dp"
        android:background="#B3D9D9D9"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewFieldsBusinesses"
        app:layout_constraintEnd_toEndOf="@+id/imageViewFieldsBusinesses"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageViewFieldsBusinesses" />

    <TextView
        android:id="@+id/textViewEventName"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:background="#00FFFFFF"
        android:gravity="center"
        android:text="Name of event"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/imageViewFieldsBusinesses"
        app:layout_constraintTop_toTopOf="@+id/semiTransparentBar" />

    <TextView
        android:id="@+id/textViewEventPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price: R10.00"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/imageViewFieldsBusinesses"
        app:layout_constraintTop_toBottomOf="@+id/textViewEventName" />

    <TextView
        android:id="@+id/textViewEventDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: YYYY-MM-DD"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/imageViewFieldsBusinesses"
        app:layout_constraintTop_toBottomOf="@+id/textViewEventPrice" />

    <Button
        android:id="@+id/buttonBook"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:backgroundTint="#765C19"
        android:gravity="center"
        android:padding="0dp"
        android:text="Book"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewFieldsBusinesses"
        app:layout_constraintEnd_toEndOf="@id/imageViewFieldsBusinesses"
        app:layout_constraintHorizontal_bias="0.976"
        app:layout_constraintStart_toStartOf="@id/imageViewFieldsBusinesses"
        app:layout_constraintTop_toTopOf="@+id/semiTransparentBar" />

</androidx.constraintlayout.widget.ConstraintLayout>